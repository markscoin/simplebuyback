<% @body_id = 'cart' %>
<div data-hook="cart_container">

  <% if @order.line_items.empty? %>
  <div class="row">
  <div class="col-xs-5 col-xs-offset-1 ">
    <h1>Recycle Bin</h1>
    <div data-hook="empty_cart">
      <div class="alert alert-info">Your Recycle Bin is Empty!</div>
      <p><%= link_to "Search for more devices", main_app.home_index_path, :class => 'btn btn-success' %></p>
    </div>
  </div>
  </div>
  <% else %>
  <div class="row">
  <div class="col-xs-10 col-xs-offset-1 ">

  <h1>Your Recycle Bin</h1>
  <div data-hook="outside_cart_form">
    <%= form_for @order, :url => update_cart_path, :html => {:id => 'update-cart'} do |order_form| %>
      <div data-hook="inside_cart_form">

        <div data-hook="cart_items">
          <%= render :partial => 'form', :locals => { :order_form => order_form } %>
        </div>

        <div class="links col-xs-6 navbar-form pull-right text-right" data-hook="cart_buttons">
          <div class="form-group">
          <%= order_form.text_field :coupon_code, :size => 12, :placeholder => "Referral code", class: "form-control form-control-inline" %></div>
          <%= button_tag :class => 'btn btn-primary', :id => 'update-button' do %>
            <%= Spree.t(:update) %>
          <% end %>
          <%= button_tag :class => 'btn btn-lg btn-success', :id => 'checkout-link', :name => 'checkout' do %>
            Get Paid
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="empty-cart" class="col-xs-6 pull-left" data-hook>
    <%= form_tag empty_cart_path, :method => :put do %>
      <p id="clear_cart_link" data-hook>
        <%= submit_tag "Empty Recycle Bin", :class => 'btn btn-default' %>
        <%= Spree.t(:or) %>
        <%= link_to "Search for Additional Items", products_path, :class => 'continue' %>
      </p>
    <% end %>
  </div>
  </div>
  </div>

<% end %>
</div>