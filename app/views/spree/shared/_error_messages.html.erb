<% if target && target.errors.any? %>
    <div id="errorExplanation" class="errorExplanation" data-hook>
      <h2><%= Spree.t(:errors_prohibited_this_record_from_being_saved, :count => target.errors.count/2.round(1)) %>:</h2>
      <p><%= Spree.t(:there_were_problems_with_the_following_fields) %>:</p>
      <ul>
        <% target.errors.full_messages.each do |msg| %>
            <% unless msg.include?('Billing') %>
              <% if msg.include?('Shipping') %>
                <% message = msg %>
                <li><%= message %></li>
              <% end %>
            <% end %>
        <% end %>
      </ul>
    </div>
<% end %>
