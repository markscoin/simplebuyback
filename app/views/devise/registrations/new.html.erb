<div class="pad45"></div>
<div class="container signup">
<div class="row">
  <div class="col-md-5 right_border">
    <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div class="input-group bottom_margin_10"><span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span><%= f.email_field :email, autofocus: true, placeholder: "email@example.com",size: "30", :data => {:rel => "tooltip", :placement => "right" },title: "We will NEVER sell your info", class: "input_field" %> </div><br>
  <div class="input-group bottom_margin_10"><span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span><%= f.password_field :password, autocomplete: "off", placeholder: "Password",size: "30", class: "input_field" %></div><br>
  <div class="input-group bottom_margin_10"><span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation",size: "30", class: "input_field" %></div><br>
  <div><%= f.submit "Sign up", class: "btn btn-success btn-lg", style: "margin-left: 135px;"%></div>
  <% end %>
  </div>
  <div class="col-md-6 col-md-offset-1">
    <h2>Why Register?</h2>
    <ul>
      <li>Track Orders</li>
      <li>Order History</li>
      <li>Faster Checkout</li>
      <li>Because its needed to checkout</li>
    </ul>
    <h2>Already Registered?</h2>
    <div class="center">
      <p><%= link_to "Sign in", new_session_path(resource_name), style: "font-size: 20px;" %></p>
    </div>
  </div>

</div>
</div>