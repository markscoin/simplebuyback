<div class="pad45"></div>
<div class="container ">
  <div class="row">
    <div class="col-xs-12 col-md-5 signup ">
        <h2>Forgot your password?</h2>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="input-group bottom_margin_10"><span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span><%= f.email_field :email, autofocus: true, placeholder: "example@example.com", size: "30", class: "input_field"   %></div>
        
          <div><%= f.submit "Send Me Reset Password Instructions", class: "btn-success btn", style: "border-radius: 5px;" %></div>
        <% end %>
      <div class="pad10" style="border-top:1px solid lightgray; margin-top: 10px;"></div>
      <p>Remember Your Password or Don't Have an Account?</p>
      <%= link_to "Sign In", new_session_path(resource_name), class: "btn-success btn" %> or
      <%= link_to "Sign Up", new_registration_path(resource_name), class: "btn-success btn" %>

    </div>
  </div>
</div>